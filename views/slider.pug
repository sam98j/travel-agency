#default-carousel.relative.w-full(data-carousel="slide" class='')
  // Carousel wrapper
  .relative.h-56.overflow-hidden.rounded-lg(class="md:h-96" id='slides-container')
    // Item 1
    .duration-700.ease-in-out(data-carousel-item="")
      img.absolute.block.w-full(alt="..." class="-translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 rounded-xl" src="/images/tasaheel.png")
    // Item 2
    .hidden.duration-700.ease-in-out(data-carousel-item="active")
      img.absolute.block.w-full(alt="..." class="-translate-x-1/2 rounded-xl -translate-y-1/2 top-1/2 left-1/2" src="/images/driving.png")
    .hidden.duration-700.ease-in-out(data-carousel-item="active")
      img.absolute.block.w-full(alt="..." class="-translate-x-1/2 rounded-xl -translate-y-1/2 top-1/2 left-1/2" src="/images/hotels.png")
  // Slider indicators
  .absolute.z-30.flex.bottom-5.space-x-3(class="-translate-x-1/2 left-1/2 rtl:space-x-reverse")
    button.w-3.h-3.rounded-full(data-carousel-slide-to="0" aria-label="Slide 1" aria-current="true" type="button")
    button.w-3.h-3.rounded-full(data-carousel-slide-to="1" aria-label="Slide 2" aria-current="false" type="button")
    button.w-3.h-3.rounded-full(data-carousel-slide-to="2" aria-label="Slide 3" aria-current="false" type="button")
    button.w-3.h-3.rounded-full(data-carousel-slide-to="3" aria-label="Slide 4" aria-current="false" type="button")
    button.w-3.h-3.rounded-full(data-carousel-slide-to="4" aria-label="Slide 5" aria-current="false" type="button")
  // Slider controls
  button.absolute.top-0.start-0.z-30.flex.items-center.justify-center.h-full.px-4.cursor-pointer.group(
    data-carousel-prev="" 
    class="focus:outline-none" 
    type="button"
    id='prev-slide-btn'
    )
    span.inline-flex.items-center.justify-center.w-10.h-10.rounded-full(
      class="bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
      )
      svg.w-4.h-4.text-white(
        viewBox="0 0 6 10" 
        fill="none" 
        xmlns="http://www.w3.org/2000/svg" 
        aria-hidden="true" 
        class="dark:text-gray-800 rtl:rotate-180"
        )
        path(
          d="M5 1 1 5l4 4" 
          stroke-width="2" 
          stroke-linejoin="round" 
          stroke-linecap="round" 
          stroke="currentColor"
          )
      span.sr-only Previous
  button.absolute.top-0.end-0.z-30.flex.items-center.justify-center.h-full.px-4.cursor-pointer.group(
    data-carousel-next="" 
    class="focus:outline-none" 
    id='next-slide-btn'
    type="button"
    )
    span.inline-flex.items-center.justify-center.w-10.h-10.rounded-full(
      class="bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
      )
      svg.w-4.h-4.text-white(
        viewBox="0 0 6 10" 
        fill="none" 
        xmlns="http://www.w3.org/2000/svg" 
        aria-hidden="true" 
        class="dark:text-gray-800 rtl:rotate-180"
        )
        path(
          d="m1 9 4-4-4-4" 
          stroke-width="2" 
          stroke-linejoin="round" 
          stroke-linecap="round" 
          stroke="currentColor"
          )
      span.sr-only Next