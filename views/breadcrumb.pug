        svg.w-3.h-3.text-gray-400.mx-1(
          viewBox="0 0 6 10" 
          fill="none" 
          xmlns="http://www.w3.org/2000/svg" 
          aria-hidden="true" 
          class="rtl:rotate-180"
          )
          path(
            d="m1 9 4-4-4-4" 
            stroke-width="2" 
            stroke-linejoin="round" 
            stroke-linecap="round" 
            stroke="currentColor"
            )
